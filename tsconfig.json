{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            // "@/tailwind": ["./tailwind.config.ts"]
            "@/tailwind": [
                "./node_modules/tailwindcss/*"
            ]
        }
    },
    "files": [
        "src/index.tsx",
        "node_modules/@types/react-big-calendar/index.d.ts",
        "node_modules/@types/react-router/index.d.ts",
        "node_modules/@types/react-router-dom/index.d.ts"
    ],
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "src/@types/*.d.ts",
        "node_modules/@types/react-big-calendar/index.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}